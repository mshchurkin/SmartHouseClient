<Window x:Class="SmartHouseClient.ScenarioCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouseClient"
        mc:Ignorable="d"
        Title="Создание сценария" Height="500" Width="400">
    <Grid Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Label Content="Условия" FontSize="18" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Button Height="30" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="Button_Click">Добавить условие</Button>
        </Grid>
        <Grid Grid.Column="1">
            <Label Content="Действия" FontSize="18" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Button Height="30" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">Добавить действие</Button>

            <ComboBox HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="120"/>
          </Grid>
    </Grid>
</Window>
