<Window x:Class="SmartHouseClient.ControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouseClient"
        mc:Ignorable="d"
        Title="Панель контроля" Height="391" Width="465" MinWidth="465" MinHeight="300">
    <Grid>
        <TabControl  x:Name="UsersTab">
            <TabItem x:Name="usersTab" Header="Жильцы">
                <Grid Background="#FFE5E5E5" Visibility="{Binding Path=Visibility, ElementName=usersTab}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="144*"/>
                        <ColumnDefinition Width="277*"/>
                        <ColumnDefinition Width="21*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Выберите дом:" HorizontalAlignment="Left" Margin="1,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <ComboBox x:Name="housesComboBox" HorizontalAlignment="Left" Margin="98,10,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <DataGrid x:Name="usersDataGrid" Margin="1,41,10,42" Grid.Column="1" Grid.ColumnSpan="3"/>
                    <Button x:Name="addUserBtn" Content="Добавить пользователя" Margin="0,0,268,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143" Grid.Column="1" Click="addUserBtn_Click" Grid.ColumnSpan="2"/>
                    <Button x:Name="delUser" Content="Удалить пользователя" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143" Grid.Column="2" Click="delUser_Click" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="sensorsTabIntegr" Header="Датчики" Height="22" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5" Visibility="{Binding Path=Visibility, ElementName=sensorsTabIntegr}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Выберите дом:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="housesCombo" HorizontalAlignment="Left" Margin="47.915,14,0,0" VerticalAlignment="Top" Width="161" Grid.ColumnSpan="2" Grid.Column="1" SelectionChanged="housesCombo_SelectionChanged"/>
                    <DataGrid x:Name="sensorsGrid" Margin="10,51,10,35" Grid.ColumnSpan="3" MouseDoubleClick="DataGrid_MouseDoubleClick"/>
                    <Button x:Name="addSensorBtn" Content="Добавить датчик" Margin="0,0,18,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143" Click="addSensorBtn_Click" Grid.ColumnSpan="2"/>
                    <Button x:Name="delSensor" Content="Удалить датчик" Margin="0,0,10,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143" Click="delSensor_Click" Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="gadgetsTabIntegr" Header="Механизмы" Height="22" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5"  Visibility="{Binding Path=Visibility, ElementName=sensorsTabIntegr}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111*"/>
                        <ColumnDefinition Width="54*"/>
                        <ColumnDefinition Width="271*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Выберите дом:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="housesACT" HorizontalAlignment="Left" Margin="47.915,14,0,0" VerticalAlignment="Top" Width="161" Grid.ColumnSpan="2" Grid.Column="1" SelectionChanged="housesACT_SelectionChanged"/>
                    <DataGrid x:Name="actorsGrid" Margin="10,51,10,35" Grid.ColumnSpan="3"/>
                    <Button x:Name="addGadgetBtn" Content="Добавить механизм" Margin="0,0,18,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143" Grid.ColumnSpan="2"/>
                    <Button x:Name="deleteGadgetBtn" Content="Удалить механизм" Margin="0,0,10,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143" Grid.Column="2" Click="deleteGadgetBtn_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="housesTab" Header="Дома">
                <Grid Background="#FFE5E5E5" Visibility="{Binding Path=Visibility, ElementName=housesTab}">
                    <Expander x:Name="addHouse" Header="Добавление и удаление домов" HorizontalAlignment="Left" Height="105" VerticalAlignment="Top" Width="208" Margin="10,193,0,0">
                        <Grid Background="#FFE5E5E5">

                            <Label Content="Адрес дома:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox x:Name="houseAddressTextBox" HorizontalAlignment="Left" Height="23" Margin="0,26,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184"/>
                            <Button x:Name="addHouseBtn" Content="Добавить" HorizontalAlignment="Left" Margin="109,54,0,0" VerticalAlignment="Top" Width="75" Click="addHouseBtn_Click"/>
                            <Button x:Name="delHouseBtn" Content="Удалить выбранный дом" HorizontalAlignment="Left" Margin="276,54,-215,0" VerticalAlignment="Top" Width="145" Click="delHouseBtn_Click"/>

                        </Grid>

                    </Expander>
                    <DataGrid x:Name="housesDataGrid" Margin="10,10,10,120"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="scenarioTab"  Header="Сценарии" >

                <Grid Visibility="{Binding Path=Visibility, ElementName=scenarioTab}" Background="#FFE5E5E5">

                    <DataGrid x:Name="scenarioDataGrid" Margin="10,41,10,30"/>
                    <Label Content="Выберите дом:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="houseComboScen" HorizontalAlignment="Left" Margin="162.915,14,0,0" VerticalAlignment="Top" Width="161"/>
                    <Button x:Name="addScenario" Content="Добавить сценарий" Margin="0,0,298,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143" Click="addScenario_Click"/>
                    <Button x:Name="deleteScenario" Content="Удалить сценарий" Margin="0,0,10,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="143"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="logTab" Header="Журнал событий">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="370*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Выберите дом:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="housesCombo2" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" Width="161" Grid.Column="1" SelectionChanged="housesCombo2_SelectionChanged"/>
                    <DataGrid x:Name="journalGrid" Margin="10,51,10,35" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="settingsTab" Header="Настройки">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Фамилия" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Имя" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
                    <Label Content="Отчество" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
                    <Label Content="Тариф" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top"/>
                    <Label Content="Константинов" HorizontalAlignment="Left" Margin="121,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Константин" HorizontalAlignment="Left" Margin="121,36,0,0" VerticalAlignment="Top"/>
                    <Label Content="Константинович" HorizontalAlignment="Left" Margin="121,62,0,0" VerticalAlignment="Top"/>
                    <Label Content="Базовый" HorizontalAlignment="Left" Margin="121,88,0,0" VerticalAlignment="Top"/>
                    <Button Content="Сменить тариф" HorizontalAlignment="Left" Margin="235,91,0,0" VerticalAlignment="Top" Width="98" Click="Button_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
