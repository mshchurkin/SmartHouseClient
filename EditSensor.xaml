<Window x:Class="SmartHouseClient.EditSensor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouseClient"
        mc:Ignorable="d"
        Title="Изменение параметров датчика" Height="203.192" Width="303.191">
    <Grid>
        <Label FontSize="14" VerticalAlignment="Top"  HorizontalAlignment="Left" Margin="15,20,0,0">Порог нештатной ситуации</Label>
        <TextBox x:Name="checkTxt" Height="30" Width="50"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,20,0,0"></TextBox>
        <Button Height="30" Width="170" VerticalAlignment="Bottom" Margin="10" Click="Button_Click">Изменить параметры датчика</Button>
        <Grid x:Name="AnalogContorls">
        <Label FontSize="14" VerticalAlignment="Top"  HorizontalAlignment="Left" Margin="10,90,0,0" Content="Верхний порог"/>
        <TextBox x:Name="upTxt" Height="30" Width="50"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,90,0,0"/>
        <TextBox x:Name="downTxt" Height="30" Width="50"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,50,0,0"/>
        <Label FontSize="14" VerticalAlignment="Top"  HorizontalAlignment="Left" Margin="10,50,0,0">Нижний порог</Label>
        </Grid>
    </Grid>
</Window>
