<Window x:Class="SmartHouseClient.EditSensor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouseClient"
        mc:Ignorable="d"
        Title="Изменение параметров датчика" Height="181.915" Width="300">
    <Grid>
        <Label FontSize="14" VerticalAlignment="Top" Margin="10,10,0,0">Включен:
        </Label>
        <CheckBox x:Name="isActiveCheckBox" VerticalAlignment="Top" Margin="100,20,0,0"></CheckBox>
        <Label FontSize="14" VerticalAlignment="Top"  HorizontalAlignment="Left" Margin="15,40,0,0">Порог нештатной ситуации</Label>
        <TextBox x:Name="checkTxt" Height="30" Width="50"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,70,0,0"></TextBox>
        <Button Height="30" Width="170" VerticalAlignment="Bottom" Margin="10" Click="Button_Click">Изменить параметры датчика</Button>

    </Grid>
</Window>
