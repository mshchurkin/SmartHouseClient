<Window x:Class="SmartHouseClient.AddScenario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouseClient"
        mc:Ignorable="d"
        Title="Создать сценарий" Height="197.872" Width="200">
    <Grid>
        <TextBox x:Name="nameTextBox" Height="24"  TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="120"/>
        <Button x:Name="SignUpBtn" Content="Создать сценарий"  Width="150" HorizontalContentAlignment="Center" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="SignUpBtn_Click"/>
        <Label Content="Имя:" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10,5,0,0"/>
        <Label Content="Выбор здания:" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="120" Margin="10,60,0,0"/>
        <ComboBox x:Name="houseComboBox" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
