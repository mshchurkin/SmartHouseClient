<Window x:Class="SmartHouseClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouseClient"
        mc:Ignorable="d"
        Title="Вход в систему" Height="300" Width="250">
    <Grid Background="WhiteSmoke">
        <Label Foreground="Blue" FontSize="18" HorizontalAlignment="Center" Grid.Row="0" Margin="0,40,0,0">Контроль умным зданием</Label>
        <Label Foreground="Blue" FontSize="16" HorizontalAlignment="Center" Grid.Row="1" Margin="0,70,0,0">Логин</Label>
        <TextBox HorizontalAlignment="Center" Height="25" Width="200" Margin="0,99,0,140" FontSize="18" BorderBrush="Blue"/>
        <Label Foreground="Blue" FontSize="16" HorizontalAlignment="Center" Margin="0,124,0,0" Content="Пароль"/>
        <PasswordBox HorizontalAlignment="Center" Height="25" Width="200" Margin="0,140,0,77" FontSize="18" BorderBrush="Blue" />
        <Button HorizontalAlignment="Center" Height="30" Width="50" Margin="0,194,0,40" Foreground="Blue" FontSize="18" Background="WhiteSmoke" BorderBrush="WhiteSmoke" Click="Button_Click"> Вход </Button>
    </Grid>
</Window>
