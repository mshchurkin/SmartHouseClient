<Window x:Class="SmartHouseClient.InsertServerWidnow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouseClient"
        mc:Ignorable="d"
      Title="Введите адрес сервера" Height="200" Width="350">
    <Grid>
        <Label x:Name="errorLabel" Content="" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" Foreground="Red"></Label>

        <Label Foreground="Blue" FontSize="18" HorizontalAlignment="Center" Grid.Row="0" Margin="8,10,8,0">Укажите адрес сервера приложения</Label>
        <TextBox x:Name="loginTextBox" VerticalAlignment="Top" HorizontalAlignment="Center" Height="25" Width="330" Margin="0,80,0,0" FontSize="18" BorderBrush="Blue"/>
        <Button HorizontalAlignment="Center" Height="30" Width="50" Margin="0,0,0,10" Foreground="Blue" FontSize="18" Background="WhiteSmoke" BorderBrush="WhiteSmoke" Click="Button_Click" VerticalAlignment="Bottom">OK</Button>
    </Grid>
</Window>
